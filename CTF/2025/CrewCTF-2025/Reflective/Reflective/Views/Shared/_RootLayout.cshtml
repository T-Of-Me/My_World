@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @if (ViewData["Title"] is null)
    {
        <title>Reflective</title>
    }
    else
    {
        <title>Reflective - @ViewData["Title"]</title>
    }
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/lib/popper.js/umd/popper.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js" defer></script>
</head>
<body>


<nav class="navbar navbar-nav navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Reflective</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-controller="Notes" asp-action="Index" class="nav-link">Notes</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Notes" asp-action="CreateView" class="nav-link">Create</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <div class="mt-3">
        @RenderBody()
    </div>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>